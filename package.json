{
   "title": "bmLaunch",
   "name": "bmlaunch",
   "version": "0.0.3",
   "description": "Your bookmarks acting as launchpad",
   "main": "index.js",
   "author": "yafp",
   "engines": {
      "firefox": ">=38.0a1",
      "fennec": ">=38.0a1"
   },
   "license": "MIT",


   "preferences": [
      {
         "type": "bool",
         "name": "pref_enableShortURLTitles",
         "value": true,
         "title": "Enable URL-title shortening",
         "description": "Shortens the displayed URL title"
      },
      {
         "description": "Chars used for displaying url title",
         "name": "pref_shortenURLTitleLength",
         "type": "integer",
         "value": 22,
         "title": "Define a max URL title length"
      },



      {
         "type": "bool",
         "name": "pref_enableShortURLs",
         "value": true,
         "title": "Enable URL shortening",
         "description": "Shortens the displayed URL"
      },
      {
         "description": "Chars used for displaying url",
         "name": "pref_shortenURLLength",
         "type": "integer",
         "value": 27,
         "title": "Define a max URL title length"
      },




      {
              "name": "pref_groupsToIgnore",
              "title": "Groups to ignore",
              "description": "The following groups will not be displayed (sep by semikolon)",
              "type": "string",
              "value": ""
          },





      {
      "type": "bool",
      "name": "pref_showURL",
      "value": true,
      "title": "Show URL",
      "description": "Shows URL behind the title"
   }, {
      "description": "Chars used for displaying url",
      "name": "pref_URLLength",
      "type": "integer",
      "value": 8,
      "title": "URL display length"
   }, {
      "type": "bool",
      "name": "pref_showTags",
      "value": false,
      "title": "Show Tags",
      "description": "Shows tags behind the title"
   }]
}
